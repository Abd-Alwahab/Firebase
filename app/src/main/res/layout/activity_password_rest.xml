<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".password_rest" android:background="#777">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <Button
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button2" android:layout_weight="1"
                android:background="@color/colorPrimaryDark"/>
        <Button
                android:text="Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button" android:layout_weight="1"
                android:background="#cc2323"/>
    </LinearLayout>
    <TextView
            android:text="Reset your Password if you forget you old password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:textAlignment="center"
            android:textSize="24sp" android:layout_margin="20dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/user_email_reaet"
            android:background="#fff" android:padding="15dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:hint="you email address"/>
    <Button
            android:text="Reset"
            android:layout_width="300dp"
            android:layout_height="wrap_content" android:id="@+id/reset_btn"
            android:layout_below="@+id/user_email_reaet" android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp" android:background="@android:color/holo_green_dark"/>
</RelativeLayout>